/*******************************
     User Global Variables
*******************************/
/*-------------------
       Fonts
--------------------*/

@fontPath          : '../../themes/cisco/assets/fonts';
@fontName          : 'cisco-ucp';
@fontSmoothing     : antialiased;

@headerFont        : CiscoSansRegular, 'Helvetica Neue', Arial, Helvetica, sans-serif;
@pageFont          : CiscoSansRegular, 'Helvetica Neue', Arial, Helvetica, sans-serif;

@googleFontName    : 'Lato';
@importGoogleFonts : false;
@googleFontSizes   : '400,700,400italic,700italic';
@googleSubset      : 'latin';

@googleProtocol    : 'https://';
@googleFontRequest : '@{googleFontName}:@{googleFontSizes}&subset=@{googleSubset}';

/*---  Colors  ---*/
@blue              : #049fd9;

@primaryColor : @blue;
@secondaryColor : #ffffff;


@primaryColorHover : #036e97;
@primaryColorFocus : @blue;
@primaryColorDown : #626469;

@secondaryColorHover : #036e97;
@secondaryColorFocus : #ffffff;
@secondaryColorDown : #626469;


/*-------------------
    Emotive Colors
--------------------*/

/* Negative */
@negativeBackgroundColor : #FEDCD7;
@negativeBorderColor     : #F96452;
